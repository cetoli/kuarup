        <include>**/Test*.java</include>
      </includes>
      <excludes>
        <exclude>**/IntegrationTest*.java</exclude>
        <exclude>**/AbstractTest*.java</exclude>
      </excludes>
      <resources>
        <resource>
          <directory>${basedir}/test</directory>
          <includes>
            <include>**/*.xm*</include>
          </includes>
        </resource>
      </resources>
    </unitTest>

    <resources>
